<MudDialog>
    <TitleContent>Контакт: @Contact.FullName</TitleContent>
    <DialogContent>
        @if (!string.IsNullOrWhiteSpace(Contact.Telephone))
        {
            <MudBadge Color="Color.Success" Icon="@Icons.Custom.Brands.WhatsApp" Visible="Contact.HasWhatsApp">
                <MudText>Телефон: @(Contact.Telephone)</MudText>
            </MudBadge>
        }
        <MudText>Почта: @Contact.Email</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Закрыть</MudButton>
    </DialogActions>
</MudDialog>

    @code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Contact Contact { get; set; }

    private void Cancel() => MudDialog.Cancel();
}